<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-gray-100 to-gray-300 min-h-screen flex flex-col items-center font-sans p-6">

    <!-- Back link -->
    <a href="/" class="block mb-6 text-blue-600 hover:text-blue-800 text-sm font-medium underline self-start">
        ‚Üê Create New User
    </a>

    <!-- User List -->
    <div class="grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 w-full max-w-6xl">

        <% users.forEach(user=> { %>
            <div class="relative group">
                <!-- Glow -->
                <div
                    class="absolute -inset-1 rounded-2xl bg-gradient-to-r from-blue-400 to-purple-500 blur opacity-25 group-hover:opacity-50 transition">
                </div>

                <!-- Card -->
                <div
                    class="relative bg-white/70 backdrop-blur-md shadow-xl rounded-2xl p-6 text-center transition transform group-hover:-translate-y-1 group-hover:shadow-2xl">

                    <!-- Avatar -->
                    <div class="w-24 h-24 mx-auto mb-4">
                        <img src="<%= user.photo %>" alt="<%= user.name %>"
                            class="w-full h-full object-cover rounded-full border-4 border-white shadow-md ring-4 ring-blue-500/40">
                    </div>

                    <!-- Info -->
                    <h2 class="text-2xl font-bold text-gray-800 mb-1">
                        <%= user.name %>
                    </h2>
                    <p class="text-gray-600 mb-6">
                        <%= user.email %>
                    </p>
                    <div class="flex justify-center gap-4">
                        <!-- Edit (future) -->
                        <a href="/edit/<%= user._id %>"
                            class="px-5 py-2 bg-blue-500 text-white text-sm font-semibold rounded-lg shadow-md hover:bg-blue-600 hover:shadow-blue-500/40 transition">
                            Edit
                        </a>

                        <a href="/delete/<%= user._id %>"
                            class="px-5 py-2 bg-red-500 text-white text-sm font-semibold rounded-lg shadow-md hover:bg-red-600 hover:shadow-red-500/40 transition">
                            Delete
                        </a>


                    </div>
                </div>
            </div>
            <% }) %>

    </div>

</body>

</html>